<UserControl x:Class="AppWpfToolkit.UcColorEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppWpfToolkit"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
            xmlns:xcdg="http://schemas.xceed.com/wpf/xaml/datagrid"
            xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock"
             mc:Ignorable="d" 
             d:DesignHeight="28" d:DesignWidth="300">
    <Grid>

        <xctk:ColorPicker x:Name="colorEditor" DisplayColorAndName="False" SelectedColorChanged="colorEditor_SelectedColorChanged"></xctk:ColorPicker>

    </Grid>
</UserControl>
